@model CategoryModel

<div class="form-group">
    @using (Html.BeginForm("Delete", "Category"))
    {
        <div>
            <table>
                <tr>
                    <td>
                        You want to delete: @Model.CategoryName?
                    </td>
                </tr>
                <tr>
                    <td>
                        <span class="text-danger">@Html.ValidationMessage("CategoryReferenceError")</span>
                    </td>
                </tr>
            </table>

            @Html.HiddenFor(m => m.Id)
            @Html.HiddenFor(m => m.CategoryName)
        </div>
        <br />
        <div>
            <input type="submit" class="btn btn-danger" value="Delete" />
            <a asp-action="Index" asp-controller="Category" class="btn btn-primary">Back to categories</a>
        </div>
    }
</div>